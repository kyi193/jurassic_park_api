<p id="notice"><%= notice %></p>

<h1>Cages</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Max capacity</th>
      <th>Num of dinosaurs</th>
      <th>Cage Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cages.each do |cage| %>
      <tr>
        <td><%= cage.id %></td>
        <td><%= cage.max_capacity %></td>
        <td><%= cage.dinosaurs.count %></td>
        <td><%= cage.cage_status.name %></td>
        <td><%= link_to 'Show', cage %></td>
        <td><%= link_to 'Edit', edit_cage_path(cage) %></td>
        <td><%= link_to 'Destroy', cage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

